{
  "manifest_version": 2,
  "name": "Pomodoro Potato Timer",
  "version": "1.0",
  "description": "A potato-themed Pomodoro timer",
  "icons": {
    "16": "potato-16.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "potato-16.png",
    "default_popup": "popup.html",
    "default_title": "Pomodoro Timer"
  }
}
